<h1><%= @figure.name %></h1>

<label><h3>Title: </h3></label>
<ul>
  <% @figure.titles.each do |title| %>
  <li><%= title.name %></li>
  <% end %>
</ul>

<label><h3>Landmark: </h3></label>
<ul>
  <% @figure.landmarks.each do |landmark| %>
  <li><%= landmark.name %></li>
  <% end %>
</ul>

<button type="button" name="edit"><a href="/figures/<%= @figure.id %>/edit">Edit</a></button>
